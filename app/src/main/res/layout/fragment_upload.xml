<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    tools:context=".UploadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Spinner Estratagemos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/firstStratSpn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo"
                android:padding="4dp"
                android:popupBackground="@drawable/spinner_fondo"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/secondStratSpn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo"
                android:padding="4dp"
                android:popupBackground="@drawable/spinner_fondo"
                android:spinnerMode="dialog" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/thirdStratSpn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo"
                android:padding="4dp"
                android:popupBackground="@drawable/spinner_fondo"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/fourthStratSpn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo"
                android:padding="4dp"
                android:popupBackground="@drawable/spinner_fondo"
                android:spinnerMode="dialog" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/firstStratImg"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/recuadro" />

            <ImageView
                android:id="@+id/secondStratImg"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/recuadro" />

            <ImageView
                android:id="@+id/thirdStratImg"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/recuadro" />

            <ImageView
                android:id="@+id/fourthStratImg"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/recuadro" />
        </LinearLayout>

        <!-- Arma Primaria -->
        <TextView
            android:id="@+id/textPrimaryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/primariaTxt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/primaryWpnSpn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo"
                android:padding="4dp"
                android:popupBackground="@drawable/spinner_fondo"
                android:spinnerMode="dialog" />

            <ImageView
                android:id="@+id/primaryWpnImg"
                android:layout_width="115dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:src="@drawable/bordearmas" />
        </LinearLayout>

        <!-- Arma Secundaria -->
        <TextView
            android:id="@+id/textSecondaryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/secundariaTxt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/secondaryWpnSpn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo"
                android:padding="4dp"
                android:popupBackground="@drawable/spinner_fondo"
                android:spinnerMode="dialog" />

            <ImageView
                android:id="@+id/secondaryWpnImg"
                android:layout_width="115dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:src="@drawable/bordearmas" />
        </LinearLayout>

        <!-- Pasivas de las armaduras -->
        <TextView
            android:id="@+id/textArmorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/pasivaTxt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/armorPassiveSpn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo"
                android:padding="4dp"
                android:popupBackground="@drawable/spinner_fondo"
                android:spinnerMode="dialog" />

            <ImageView
                android:id="@+id/armorPassiveImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:src="@drawable/democraciaprotege" />
        </LinearLayout>

        <!-- Potenciadores -->
        <TextView
            android:id="@+id/textBoosterLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/potenciadorEsp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/boosterSpn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_fondo"
                android:padding="4dp"
                android:popupBackground="@drawable/spinner_fondo"
                android:spinnerMode="dialog" />

            <ImageView
                android:id="@+id/boosterImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:src="@drawable/plantillabooster" />
        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/resetBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FF0000"
                android:text="Reset"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/uploadBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FFEB3B"
                android:text="@string/subirTxt"
                app:cornerRadius="5dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
