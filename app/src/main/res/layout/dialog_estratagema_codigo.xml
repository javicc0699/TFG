<!-- res/layout/dialog_estratagema_codigo.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/spinner_bg"
    android:padding="24dp">

    <TextView
        android:id="@+id/estratagemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/spinner_text"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:text="@string/tittxt" />

    <TextView
        android:id="@+id/estratagemInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/spinner_text"
        android:textSize="14sp"
        android:text="@string/codestratTxt" />
</LinearLayout>
